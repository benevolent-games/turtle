{
	"name": "@benev/turtle",
	"version": "0.2.0",
	"description": "static site generator",
	"license": "MIT",
	"author": "Chase Moskal <chasemoskal@gmail.com>",
	"type": "module",
	"main": "x/index.js",
	"bin": "x/cli.js",
	"files": [
		"x",
		"s"
	],
	"scripts": {
		"build": "run-s clean compile permissions",
		"clean": "rm -rf x && mkdir x",
		"compile": "tsc",
		"permissions": "chmod +x x/cli.js",
		"start": "http-server x/demo",
		"watch": "tsc -w",
		"demo": "node x/cli.js --in s/demo:x/demo --out x/demo --exclude **/*.partial.html.js +verbose",
		"help": "node x/cli.js +help",
		"test": "cynic node x/tests.test.js"
	},
	"dependencies": {
		"@benev/argv": "^0.1.0",
		"@types/shelljs": "^0.8.12",
		"glob": "^10.2.7",
		"shelljs": "^0.8.5"
	},
	"devDependencies": {
		"@types/node": "^20.3.0",
		"cynic": "^0.2.1",
		"http-server": "^14.1.1",
		"npm-run-all": "^4.1.5",
		"typescript": "^5.1.3"
	},
	"keywords": [
		"static-site-generator",
		"ssg"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/benevolent-games/turtle.git"
	},
	"bugs": {
		"url": "https://github.com/benevolent-games/turtle/issues"
	},
	"homepage": "https://github.com/benevolent-games/turtle#readme"
}
